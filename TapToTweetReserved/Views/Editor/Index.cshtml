@model TapToTweetReserved.Models.HomeViewModel
@{
    ViewBag.Title = "Edit Reserved Tweets";
    ViewBag.BodyClass = "editor-index";
}
@section nav{
    <div>
        @Html.ActionLink("Home", "Index", "Home")
    </div>
}

<div ng-app="app" ng-controller="editorController">

    <div class="guide" ng-show="tweets.length == 0">
        <div class="text">
            Enter "Add New" to reserve new message to tweet after.
        </div>
    </div>

    <ul class="reserved-tweets">
        <li ng-repeat="tweet in tweets">
            <a href="#" data-id="{{tweet.Id}}" class="tweeted-is-{{tweet.IsTweeted}}">
                <!-- TODO: replace line-break to "br" element. --->
                {{tweet.TextToTweet}}
            </a>
        </li>
    </ul>

    <footer class="no-selected-any no-selected-tweeted">
        @Html.ActionLink("Add New", "Create")
        @Html.ActionLink("Up", "Up", null, new { id = "cmd-up", @class = "selected-only" })
        @Html.ActionLink("Down", "Down", null, new { id = "cmd-down", @class = "selected-only" })
        @Html.ActionLink("Edit", "Edit", null, new { id = "cmd-edit", @class = "selected-only" })
        @Html.ActionLink("Delete", "Delete", null, new { id = "cmd-delete", @class = "selected-only" })
        @Html.ActionLink("Reload", "Reload", null, new { id = "cmd-reload", @class = "selected-tweeted-only" })
    </footer>
</div>
@section Scripts {
    @*<script src="~/Scripts/Editor.js"></script>*@
    <script src="~/Views/Editor/Editor.js"></script>
}
